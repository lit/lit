{
  "type": "module",
  "scripts": {
    "benchmarks": "cd packages/benchmarks && npm run benchmarks",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint \"**/*.{js,ts}\" --fix",
    "format:prettier": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
    "ignore-sync": "ignore-sync .",
    "lint": "eslint \"**/*.{js,ts}\"",
    "nuke": "rm -rf node_modules package-lock.json packages/*/{node_modules,package-lock.json} && npm install && npm run bootstrap",
    "test": "(cd packages/tests && npm test) && (cd packages/lit-ssr && npm test) && (cd packages/localize && npm test) && (cd packages/lit-element-starter-ts && npm test) && (cd packages/lit-element-starter-js && npm test)"
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "lerna": "^3.22.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-virtual": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.17.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "husky": "^4.3.0",
    "ignore-sync": "^3.0.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ignore-sync && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{cjs,html,js,json,md,ts}": "prettier --write",
    "**/*.{js,ts}": "eslint --fix"
  }
}
