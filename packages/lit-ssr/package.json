{
  "name": "lit-ssr",
  "type": "module",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "(cd node_modules/template-shadowroot && npm run build) && tsc",
    "build:watch": "tsc --watch",
    "start": "node --experimental-vm-modules ./demo/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "node --experimental-vm-modules test/integration/test.js",
    "test:unit": "node --experimental-vm-modules ./test/all-tests.js | tap-spec",
    "link:dev": "rm -f node_modules/{lit-html,reactive-element,lit-element} && ln -s ../../lit-html/development node_modules/lit-html && ln -sf ../package.json ../lit-html/development/package.json && ln -s ../../reactive-element/development node_modules/reactive-element && ln -sf ../package.json ../reactive-element/development/package.json && ln -s ../../lit-element/development node_modules/lit-element && ln -sf ../package.json ../lit-element/development/package.json",
    "link:prod": "rm -f node_modules/{lit-html,reactive-element,lit-element} && ln -s ../../lit-html node_modules/lit-html && ln -s ../../reactive-element node_modules/reactive-element && ln -s ../../lit-element node_modules/lit-element",
    "link:check": "ls -l node_modules/{lit-html,reactive-element,lit-element}"
  },
  "files": [
    "/lib/",
    "/index.d.ts",
    "/index.d.ts.map",
    "/index.js",
    "/index.js.map"
  ],
  "author": "",
  "license": "BSD-3-Clause",
  "repository": "PolymerLabs/lit-ssr",
  "devDependencies": {
    "@koa/router": "^8.0.8",
    "@open-wc/testing": "^2.5.8",
    "@open-wc/testing-karma": "^3.3.10",
    "@types/chai": "^4.2.11",
    "@types/command-line-args": "^5.0.0",
    "@types/escape-html": "^1.0.0",
    "@types/karma": "^4.4.1",
    "@types/koa": "^2.0.49",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.4",
    "@types/node-fetch": "^2.5.7",
    "@types/parse5": "^5.0.0",
    "@types/resolve": "^1.14.0",
    "@types/tape": "^4.2.33",
    "@types/tape-promise": "^4.0.0",
    "chai": "^4.2.0",
    "command-line-args": "^5.1.1",
    "deepmerge": "^4.2.2",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^7.1.1",
    "prettier": "^1.19.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.11.0",
    "tape-promise": "^4.0.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "escape-html": "^1.0.3",
    "koa": "^2.7.0",
    "koa-node-resolve": "^1.0.0-pre.5",
    "koa-static": "^5.0.0",
    "lit-element": "^3.0.0-pre.2",
    "lit-html": "^2.0.0-pre.4",
    "node-fetch": "^2.6.0",
    "parse5": "^5.1.0",
    "resolve": "^1.10.1",
    "template-shadowroot": "webcomponents/template-shadowroot#npm-support"
  },
  "engines": {
    "node": ">=13.9.0"
  }
}
