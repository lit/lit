{
  "name": "@lit/localize",
  "version": "0.4.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Localization for lit-html",
  "license": "BSD-3-Clause",
  "author": "The Polymer Project Authors",
  "homepage": "https://github.com/Polymer/lit-html/tree/lit-next/packages/localize",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polymer/lit-html.git",
    "directory": "packages/localize"
  },
  "bin": {
    "lit-localize": "bin/lit-localize.js"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf 'lib/*' 'lib/.*' 'lit-localize.js' 'localized-element.js' '*.d.ts' '*.map' '.tsbuildinfo*' 'testdata/*/output'",
    "build": "npm run clean && npm run generate-json-schema && tsc && tsc --project tsconfig.client.json",
    "generate-json-schema": "typescript-json-schema tsconfig.schema.json ConfigFile --include=src/config.ts --required --noExtraProps > config.schema.json",
    "test": "npm run build && ava --verbose && npm run test:check-tsc && npm run test:check-eslint && npx karma start --single-run",
    "test:update-goldens": "npm run build && UPDATE_TEST_GOLDENS=true ava --verbose",
    "test:check-tsc": "ls testdata/*/output/tsconfig.json | xargs -n 1 tsc --noEmit --project",
    "test:check-eslint": "eslint 'testdata/*/output/*.ts' 'testdata/*/output/**/*.ts' --max-warnings 0",
    "prettier": "prettier 'src/**/*.ts' 'src_client/**/*.ts'",
    "format:check": "npm run prettier -- --check",
    "format": "npm run prettier -- --write",
    "watch": "scripts/watch.sh",
    "prepack": "npm run build"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "jsonschema": "^1.2.6",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "minimist": "^1.2.5",
    "parse5": "^6.0.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.2",
    "xmldom": "^0.3.0"
  },
  "devDependencies": {
    "@open-wc/karma-esm": "^3.0.3",
    "@types/chai": "^4.2.12",
    "@types/diff": "^4.0.2",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.1",
    "@types/jsonschema": "^1.1.1",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.0.1",
    "@types/parse5": "^5.0.2",
    "@types/prettier": "^2.0.1",
    "@types/xmldom": "^0.1.29",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "ava": "^3.8.1",
    "chai": "^4.2.0",
    "chokidar-cli": "^2.1.0",
    "diff": "^4.0.2",
    "dir-compare": "^2.3.0",
    "eslint": "^7.0.0",
    "karma": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript-json-schema": "^0.43.0"
  }
}
