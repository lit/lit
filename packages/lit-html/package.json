{
  "name": "lit-html",
  "version": "2.0.0-pre.0",
  "description": "HTML templates literals in JavaScript",
  "license": "BSD-3-Clause",
  "homepage": "https://lit-html.polymer-project.org/",
  "repository": "Polymer/lit-html",
  "type": "module",
  "main": "index.js",
  "typings": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [
    "/index.js",
    "/index.js.map",
    "/index.d.ts",
    "/index.d.ts.map",
    "/lib/",
    "/directives/",
    "/src/",
    "!/src/test/"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "wtr \"test/**/*_test.js\" --node-resolve",
    "test:watch": "wtr \"test/**/repeat_test.js\" --node-resolve --watch",
    "format": "prettier src/* --write",
    "checksize": "rollup -c ; cat lit-html.bundled.js | wc -c ; rm lit-html.bundled.js",
    "check-version": "node check-version-tracker.js"
  },
  "author": "The Polymer Authors",
  "dependencies": {},
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@types/mocha": "^8.0.3",
    "@web/test-runner": "^0.7.15",
    "@web/test-runner-playwright": "^0.5.4",
    "mocha": "^8.1.3",
    "prettier": "^2.1.1",
    "rollup": "^2.26.9",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-terser": "^7.0.1",
    "terser": "^5.2.1",
    "typescript": "^4.0.2"
  }
}
