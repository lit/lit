{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "trusted-types",
      "mocha"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./development/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
