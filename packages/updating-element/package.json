{
  "name": "updating-element",
  "version": "1.0.0-pre.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "A simple low level base class for creating fast, lightweight web components",
  "license": "BSD-3-Clause",
  "repository": "Polymer/lit-html",
  "author": "The Polymer Authors",
  "homepage": "https://lit-element.polymer-project.org/",
  "main": "updating-element.js",
  "module": "updating-element.js",
  "type": "module",
  "exports": {
    ".": {
      "development": "./development/updating-element.js",
      "default": "./updating-element.js"
    },
    "./css-tag.js": {
      "development": "./development/css-tag.js",
      "default": "./css-tag.js"
    },
    "./decorators.js": {
      "development": "./development/decorators.js",
      "default": "./decorators.js"
    },
    "./decorators/": {
      "development": "./development/decorators/",
      "default": "./decorators/"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc && rollup -c",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "check-version": "node scripts/check-version-tracker.js",
    "checksize": "rollup -c --environment=CHECKSIZE",
    "clean": "rm -rf updating-element.{js,js.map,d.ts} decorators.{js,js.map,d.ts} css-tag.{js,js.map,d.ts} decorators/ development/",
    "dev": "scripts/dev.sh",
    "format": "prettier \"**/*{cjs,html,js,json,md,ts}\" --write",
    "lint": "eslint \"**/*.{js,ts}\" --ignore-path .gitignore",
    "prepublishOnly": "npm run check-version && npm run lint && npm test",
    "publish-dev": "npm test && VERSION=${npm_package_version%-*}-dev.`git rev-parse --short HEAD` && npm version --no-git-tag-version $VERSION && npm publish --tag dev",
    "regen-package-lock": "rm -rf node_modules package-lock.json; npm install",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "cd ../tests && npx wtr '../updating-element/development/**/*_test.js'",
    "test:prod": "MODE=prod npm run test:dev",
    "test:prod:watch": "MODE=prod npm run test:dev -- --watch",
    "test:watch": "npm run test:dev -- --watch"
  },
  "files": [
    "/css-tag.d.ts",
    "/css-tag.d.ts.map",
    "/css-tag.js",
    "/css-tag.js.map",
    "/decorators.d.ts",
    "/decorators.d.ts.map",
    "/decorators.js",
    "/decorators.js.map",
    "/decorators/",
    "/development/",
    "/src/",
    "!/src/demo/",
    "!/src/test/",
    "/updating-element.d.ts",
    "/updating-element.d.ts.map",
    "/updating-element.js",
    "/updating-element.js.map"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/plugin-transform-typescript": "^7.2.0",
    "@esm-bundle/chai": "^4.1.5",
    "@types/chai": "^4.0.1",
    "@types/mocha": "^8.0.3",
    "chokidar-cli": "^2.1.0",
    "mocha": "^8.1.1",
    "rollup": "^2.26.4",
    "typescript": "^4.0.2"
  },
  "typings": "updating-element.d.ts",
  "directories": {
    "test": "test"
  }
}
