    "@webcomponents/template": "^1.4.4",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "esbuild": "^0.21.3"
  },
  "typings": "reactive-element.d.ts",
  "directories": {
    "test": "test"
  }
}
