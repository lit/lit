{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["src/**/*"]
}
