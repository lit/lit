{
  "name": "@lit-labs/eleventy-plugin-lit",
  "version": "1.0.0-pre.1",
  "description": "Eleventy plugin for rendering Lit components.",
  "license": "BSD-3-Clause",
  "homepage": "https://lit-element.polymer-project.org/",
  "repository": "lit-html",
  "main": "index.js",
  "typings": "index.d.ts",
  "exports": {
    ".": {
      "default": "./index.js"
    }
  },
  "files": [
    "/src/",
    "!/src/test/",
    "/index.{d.ts,d.ts.map,js,js.map}"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc --build && treemirror development . '**/*.d.ts{,.map}'",
    "build:ts:watch": "tsc --build --watch",
    "build:demo": "cd demo && eleventy",
    "build:demo:bundle": "cd demo && rollup -c",
    "build:demo:watch": "cd demo && eleventy --watch",
    "clean": "rm -rf {index}.{js,js.map,d.ts} test/ demo/_site demo/_js/*.bundle.js *.tsbuildinfo",
    "dev": "scripts/dev.sh",
    "regen-package-lock": "rm -rf node_modules package-lock.json; npm install",
    "serve:demo": "wds --watch --node-resolve --open demo/_site/test"
  },
  "author": "Google LLC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@web/dev-server": "^0.1.11",
    "@webcomponents/template-shadowroot": "^0.1.0",
    "rollup": "^2.45.2",
    "typescript": "^4.1.3",
    "internal-scripts": "^1.0.0"
  },
  "dependencies": {
    "@lit-labs/ssr": "1.0.0-pre.1",
    "eleventy": "^1.0.6",
    "lit": "^2.0.0-pre.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
