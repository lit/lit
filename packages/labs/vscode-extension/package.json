{
  "name": "@lit-labs/vscode-extension",
  "displayName": "Lit",
  "description": "Lit syntax highlighting, code completion, type-checking, and more for VS Code",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./extension.cjs",
  "contributes": {
    "configuration": {
      "title": "Lit",
      "properties": {}
    },
    "commands": [
      {
        "command": "lit.hello",
        "title": "Hello Lit"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "@lit-labs/tsserver-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "wireit",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "wireit",
    "test:unit": "wireit",
    "test:vscode": "wireit"
  },
  "dependencies": {
    "@lit-labs/analyzer": "^0.13.2",
    "@lit-labs/tsserver-plugin": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "@types/vscode": "^1.103.0",
    "@vscode/test-electron": "^2.5.2",
    "typescript": "~5.9.0"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "../analyzer:build",
        "../tsserver-plugin:build"
      ],
      "files": [
        "src/**/*.{ts,cts}",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "extension.cjs",
        "extension.cjs.map"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "dependencies": [
        "test:unit",
        "test:vscode"
      ]
    },
    "test:unit": {
      "command": "node --enable-source-maps --test-reporter=spec --test test/lib/**/*_test.js",
      "dependencies": [
        "build"
      ],
      "files": [
        "test_files/*.ts",
        "test_files/*.golden.js"
      ],
      "output": []
    },
    "test:vscode": {
      "command": "node ./test/runExtensionTest.js",
      "dependencies": [
        "build"
      ]
    }
  }
}
