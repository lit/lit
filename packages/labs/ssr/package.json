  "description": "SSR for Lit",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node --experimental-vm-modules ./demo/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "npm run test:integration:dev && npm run test:integration:prod",
    "test:integration:dev": "BROWSERS=preset:local MODE=dev NODE_OPTIONS=--experimental-vm-modules wtr",
    "test:integration:prod": "BROWSERS=preset:local MODE=prod NODE_OPTIONS=--experimental-vm-modules wtr",
    "test:unit": "node --experimental-vm-modules ./test/all-tests.js | tap-spec"
  },
