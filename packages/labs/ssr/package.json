    "@types/command-line-args": "^5.0.0",
    "@types/escape-html": "^1.0.0",
    "@types/koa": "^2.0.49",
    "@types/koa__router": "^8.0.2",
    "@types/koa-cors": "*",
    "@types/koa-static": "^4.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.4",
