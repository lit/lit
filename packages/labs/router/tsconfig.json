{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "outDir": "./development/",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "types": ["urlpattern-polyfill", "chai", "mocha", "trusted-types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [],
  "references": [{"path": "../../lit"}]
}
