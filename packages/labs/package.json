{
  "name": "@lit/labs",
  "version": "1.0.0-pre.1",
  "description": "An experimental playground for Lit helpers and tools. Your mileage may vary.",
  "license": "BSD-3-Clause",
  "homepage": "https://lit-element.polymer-project.org/",
  "repository": "lit-html",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "exports": {
    ".": {
      "development": "./development/index.js",
      "default": "./index.js"
    },
    "./frameworks/": {
      "development": "./development/frameworks/",
      "default": "./frameworks/"
    },
    "./controllers/": {
      "development": "./development/controllers/",
      "default": "./controllers/"
    }
  },
  "files": [
    "/src/",
    "!/src/test/",
    "/index.d.ts",
    "/index.d.ts.map",
    "/index.js",
    "/index.js.map",
    "/frameworks/react/create-component.d.ts",
    "/frameworks/react/create-component.d.ts.map",
    "/frameworks/react/create-component.js",
    "/frameworks/react/create-component.js.map",
    "/controllers/async-task.d.ts",
    "/controllers/async-task.d.ts.map",
    "/controllers/async-task.js",
    "/controllers/async-task.js.map"
  ],
  "scripts": {
    "build": "npm run clean && tsc && rollup -c",
    "clean": "rm -rf index.{js,js.map,d.ts} development/ controllers/ frameworks/",
    "dev": "scripts/dev.sh",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "cd ../tests && npx wtr '../labs/development/**/*_test.js'",
    "test:prod": "TEST_PROD_BUILD=true npm run test:dev",
    "test:watch": "npm run test:dev -- --watch",
    "checksize": "rollup -c --environment=CHECKSIZE",
    "regen-package-lock": "rm -rf node_modules package-lock.json; npm install"
  },
  "author": "The Polymer Authors",
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@types/mocha": "^8.0.3",
    "@types/chai": "^4.0.1",
    "@types/trusted-types": "^1.0.1",
    "@web/test-runner-mocha": "^0.3.5",
    "@webcomponents/shadycss": "^1.8.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "mocha": "^8.1.3",
    "rollup": "^2.28.2",
    "typescript": "^4.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.9.8"
  },
  "dependencies": {
    "reactive-element": "^1.0.0-pre.1",
    "lit-element": "^3.0.0-pre.2",
    "lit-html": "^2.0.0-pre.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
