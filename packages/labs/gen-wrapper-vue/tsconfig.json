{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "target": "es2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/",
    "outDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": [],
  "references": [{"path": "../../tests"}]
}
