{
  "name": "eslint-plugin-lit",
  "private": true,
  "version": "0.0.2",
  "description": "Lit support for ESLint",
  "license": "BSD-3-Clause",
  "author": "Google LLC",
  "homepage": "https://github.com/lit/lit/tree/main/packages/labs/esling-plugin-lit",
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/labs/eslint-plugin-lit"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,js.map,d.ts,d.ts.map}",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted",
      "dependencies": [
        "build:deps"
      ]
    },
    "build:deps": {
      "dependencies": [
        "../analyzer:build"
      ]
    },
    "test": {
      "command": "node --enable-source-maps --test-reporter=spec --test test/**/*_test.js",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    }
  },
  "files": [
    "index.*",
    "/lib/",
    "!/lib/.tsbuildinfo"
  ],
  "exports": {
    ".": "./index.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/rule-tester": "^6.19.0",
    "eslint": "^8.56.0"
  },
  "dependencies": {
    "@lit-labs/analyzer": "^0.13.0",
    "@typescript-eslint/utils": "^6.19.0",
    "typescript": "~5.5.0"
  }
}
