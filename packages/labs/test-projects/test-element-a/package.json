{
  "private": true,
  "name": "@lit-internal/test-element-a",
  "version": "1.0.0",
  "scripts": {
    "build": "wireit",
    "pack": "wireit"
  },
  "files": [
    "/element-a.{js,js.map,d.ts,d.ts.map}"
  ],
  "dependencies": {
    "lit": "^2.3.0-next.0"
  },
  "devDependencies": {
    "typescript": "~4.7.4"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../../../lit:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "command": "tsc --build --pretty",
      "output": [
        "element-a.{js,js.map,d.ts,d.ts.map}",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "pack": {
      "dependencies": [
        "build"
      ],
      "command": "npm pack",
      "files": [
        "package.json",
        "element-a.{js,js.map,d.ts,d.ts.map}"
      ],
      "output": [
        "*.tgz"
      ]
    }
  }
}
