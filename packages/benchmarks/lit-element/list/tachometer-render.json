{
  "$schema": "https://raw.githubusercontent.com/Polymer/tachometer/master/config.schema.json",
  "root": "../../../../",
  "sampleSize": 50,
  "timeout": 0,
  "benchmarks": [
    {
      "url": "index.html?benchmark=render",
      "browser": {
        "name": "chrome",
        "headless": true
      },
      "measurement": [
        {
          "mode": "performance",
          "entryName": "render"
        }
      ],
      "expand": [
        {
          "name": "this-change"
        },
        {
          "name": "tip-of-tree",
          "packageVersions": {
            "label": "tip-of-tree",
            "dependencies": {
              "lit-html": {
                "kind": "git",
                "repo": "https://github.com/lit/lit-html.git",
                "ref": "main",
                "subdir": "packages/lit-html",
                "setupCommands": [
                  "npm ci",
                  "npm run bootstrap",
                  "npm run build"
                ]
              },
              "lit-element": {
                "kind": "git",
                "repo": "https://github.com/lit/lit-html.git",
                "ref": "main",
                "subdir": "packages/lit-element",
                "setupCommands": [
                  "npm ci",
                  "npm run bootstrap",
                  "npm run build"
                ]
              },
              "@lit/reactive-element": {
                "kind": "git",
                "repo": "https://github.com/lit/lit-html.git",
                "ref": "main",
                "subdir": "packages/reactive-element",
                "setupCommands": [
                  "npm ci",
                  "npm run bootstrap -- --concurrency=1",
                  "npm run build"
                ]
              }
            }
          }
        }
      ]
    }
  ]
}
